#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------

security.cookieName = PHPSESSID
security.cookieDomain = ''
security.cookiePath = '/'
security.cookieSecure = false
security.cookieHttpOnly = true
security.cookieSameSite = 'Lax'

# CSRF Protection
security.tokenRandomize = false
security.headerName = 'X-CSRF-TOKEN'

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------

session.driver = FileHandler
session.cookieName = PHPSESSID
session.expiration = 7200
session.savePath = WRITEPATH . 'session'
session.matchIP = false
session.timeToUpdate = 300
session.regenerateDestroy = false

#--------------------------------------------------------------------
# LOGGER
#--------------------------------------------------------------------

logger.threshold = 4
logger.dateFormat = 'Y-m-d H:i:s'

#--------------------------------------------------------------------
# CURLRequest
#--------------------------------------------------------------------

curlrequest.shareOptions = true

#--------------------------------------------------------------------
# EMAIL CONFIGURATION
#--------------------------------------------------------------------

email.protocol = smtp
email.SMTPHost = smtp.gmail.com
email.SMTPUser = your-email@gmail.com
email.SMTPPass = your-app-password
email.SMTPPort = 587
email.SMTPCrypto = tls
email.SMTPTimeout = 5

email.fromEmail = noreply@eeccentremedical.com
email.fromName = 'EEC Centre Médical'
email.recipients = ''

