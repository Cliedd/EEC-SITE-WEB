app.baseURL = 'http://localhost:9000/'
app.forceGlobalSecureRequests = false

# Encryption (remplacer avec une clé sécurisée)
# Générer avec: php -r "echo base64_encode(random_bytes(32));"
encryption.key = ''
encryption.driver = OpenSSL

#--------------------------------------------------------------------
# DATABASE
